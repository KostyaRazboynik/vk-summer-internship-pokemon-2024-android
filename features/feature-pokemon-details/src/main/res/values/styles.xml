<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PokemonAppText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PokemonAppText.16">
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="PokemonAppText.26">
        <item name="android:textSize">@dimen/text_26</item>
    </style>

    <style name="StatCard">
        <item name="cardElevation">1dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>
</resources>
